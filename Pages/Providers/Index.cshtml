@page
@model SupermarketWEB.Pages.Provider.IndexModel
@{
    ViewData["Title"] = "Index Categories";
}

<h1>Index Providers</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Observation)
           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Provider)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observation)
                </td>
                <td>
          
                <td>
                   
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                
                </td>
            </tr>
        }
    </tbody>

</table>